<idea-plugin>
  <extensions defaultExtensionNs="com.intellij">
    <fileType name="Something (Gradle Declarative)"
              implementationClass="com.android.tools.idea.gradle.something.SomethingFileType"
              fieldName="INSTANCE"
              language="Something"
              extensions="something"/>
    <lang.parserDefinition language="Something"
                           implementationClass="com.android.tools.idea.gradle.something.SomethingParserDefinition"/>
    <lang.syntaxHighlighter language="Something" implementationClass="com.android.tools.idea.gradle.something.SomethingHighlighter"/>
    <lang.quoteHandler language="Something" implementationClass="com.android.tools.idea.gradle.something.SomethingQuoteHandler"/>
    <lang.braceMatcher language="Something" implementationClass="com.android.tools.idea.gradle.something.SomethingPairedBraceMatcher"/>
    <lang.formatter
        language="Something"
        implementationClass="com.android.tools.idea.gradle.something.formatting.SomethingFormattingModelBuilder"/>
    <langCodeStyleSettingsProvider
        implementation="com.android.tools.idea.gradle.something.formatting.settings.SomethingLanguageCodeStyleSettingsProvider"/>
    <completion.contributor language="Something"
                            implementationClass="com.android.tools.idea.gradle.something.SomethingCompletionContributor" />
    <completion.confidence language="Something"
                           id="EnableAutoPopupInSomethingCompletion"
                           implementationClass="com.android.tools.idea.gradle.something.EnableAutoPopupInSomethingCompletion" />

  </extensions>
  <extensions defaultExtensionNs="com.android.tools.idea.gradle.dsl">
    <transformerFactory implementation="com.android.tools.idea.gradle.dsl.parser.something.SomethingDslTransformerFactory"/>
  </extensions>
</idea-plugin>